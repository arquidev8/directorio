



<body class="bg-gray-100">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl my-10">
    {{#if detalle}}
      <div class="md:flex">
       
        <div class="p-8">
          <h1 class="text-xl font-bold"> <strong> {{detalle.Title}} </strong></h1>
          <p class="text-gray-700 mt-2">Referencia: {{detalle.Id}}</p>
          <p class="text-gray-700 mt-2">Provincia: {{detalle.Provincia}}</p>
          <p class="text-gray-700 mt-2">Precio: {{detalle.Price}}</p>
          <p class="text-gray-700 mt-2">Descripción: {{detalle.Descripcion}}</p>
          <p class="text-gray-700 mt-2">Direccion: {{detalle.Direccion}}</p>
          <p class="text-gray-700 mt-2">Metros Cuadrados: {{detalle.MetrosCuadrados}}</p>
          <p class="text-gray-700 mt-2">Habitaciones: {{detalle.Dormitorios}}</p>
          <p class="text-gray-700 mt-2">Baños: {{detalle.Baños}}</p>
        </div>
      </div>
       <div class="md:shrink-0 mr-3">
          <img class="h-32 w-full object-cover md:h-48 md:w-48 lg:h-64 lg:w-64 m-6 " src="{{detalle.MainPhoto}}" alt="Imagen de propiedad">
        </div>
      <div class="p-2 grid grid-cols-2 md:grid-cols-4 gap-4">
        {{#each detalle.ImageSources}}
          <img class="w-full h-32 object-cover" src="{{this}}" alt="Imagenes de propiedad">
        {{/each}}
      </div>

    {{else}}
      <div class="p-8">
        <p class="text-gray-700">Propiedad no encontrada</p>
      </div>
    {{/if}}
  </div>
</body>

<style>
  body {
    position: relative;
    width: 100%;
    height: 100%;
    background-image: url("https://i.postimg.cc/bN1TjWfL/rascacielos-vista-angulo-1359-159.jpg");
    background-size: cover;
    background-position: center;
  }

  body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 110%;
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.9));
    z-index: -1;
  }
</style>
