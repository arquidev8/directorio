<script>
   document.getElementById('filtros').addEventListener('submit', function(event) {
  event.preventDefault();
  var provincia = document.getElementById('provincia').value;
  var referencia = document.getElementById('referencia').value;

  var cards = document.querySelectorAll('.card');
  cards.forEach(function(card) {
    var cardProvincia = card.querySelector('[data-provincia]').textContent;
    var cardReferencia = card.querySelector('[data-referencia]').textContent;

    if ((provincia === '' || cardProvincia.includes(provincia)) &&
        (referencia === '' || cardReferencia.includes(referencia))) {
      card.style.display = 'block';
    } else {
      card.style.display = 'none';
    }
  });
});

  </script>



